<VirtualHost *:80>

    ServerAdmin root
    {% if APACHE_FQDN is defined %}
    ServerName {{ APACHE_FQDN }}
    {% endif %}
    DocumentRoot {{ WORKINGDIR }}/web

    <Directory {{ WORKINGDIR }}/web/>
      Options Indexes FollowSymLinks MultiViews
      AllowOverride All
      Order deny,allow
      Allow from all
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

</VirtualHost>
